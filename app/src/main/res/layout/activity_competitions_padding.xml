<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="in.alcheringa.alcher16.Competitions">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        ></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:orientation="vertical"
        android:weightSum="10">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/image_comp_main"
        android:layout_below="@+id/tool_bar"
        android:layout_weight="4"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="6"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/comp_grid_iv1"
                android:layout_weight="1"
                android:padding="5dp"
                android:onClick="onClick1"
                android:background="@color/gray"
                android:elevation="5dp"

                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/comp_grid_iv2"
                android:layout_weight="1"
                android:padding="5dp"
                android:onClick="onClick2"
                android:background="@color/gray"
                android:elevation="5dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/comp_grid_iv3"
                android:layout_weight="1"
                android:padding="5dp"
                android:onClick="onClick3"
                android:background="@color/gray"
                android:elevation="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/comp_grid_iv4"
                android:layout_weight="1"
                android:padding="5dp"
                android:onClick="onClick4"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/comp_grid_iv5"
                android:layout_weight="1"
                android:padding="5dp"
                android:onClick="onClick5"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/comp_grid_iv6"
                android:layout_weight="1"
                android:padding="5dp"
                android:onClick="onClick6"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/comp_grid_iv7"
                android:layout_weight="1"
                android:padding="5dp"
                android:onClick="onClick7"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/comp_grid_iv8"
                android:layout_weight="1"
                android:padding="5dp"
                android:onClick="onClick8"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/comp_grid_iv9"
                android:layout_weight="1"
                android:padding="5dp"
                android:onClick="onClick9"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
